            </field>
        </record>


        <record id="action_payment_posting_etm_pp_chk_research_quality_allocation" model="ir.actions.act_window">
            <field name="name">Audit Allocation - PP-Chk Research</field>
            <field name="res_model">payment.posting.etm</field>
            <field name="view_mode">tree,form,search</field>
            <field name="domain">[('status_id', '=', 'Completed'),('type', '=', 'pp_chk_research')]</field>
            <field name="context">{'search_default_unassigned_audit_id': 1,'default_type': 'pp_chk_research'}</field>
            <field name="search_view_id" ref="payment_posting_etm_search_view" />
            <field name="view_ids" eval="[(5, 0, 0),
                    (0, 0, {'view_mode': 'tree', 'view_id': ref('view_payment_posting_etm_pp_quality_allocation_chk_research_tree')}),
                    (0, 0, {'view_mode': 'form', 'view_id': ref('view_payment_posting_etm_pp_quality_allocation_chk_research_form')})]"/>

        </record>



    </data>
</odoo>