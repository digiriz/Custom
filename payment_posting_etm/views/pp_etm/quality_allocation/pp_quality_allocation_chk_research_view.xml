                            <!--                                    </group>-->
                            <!--                                    &lt;!&ndash;<div class="oe_right">-->
                            <!--                                        <div class="oe_inline">-->
                            <!--                                            <label for="total_invoice_amount" class="oe_form_label"-->
                            <!--                                                   style="font-weight: bold;">Total :-->
                            <!--                                            </label>-->
